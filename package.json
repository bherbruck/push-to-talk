{
  "name": "push-to-talk",
  "version": "0.2.0",
  "description": "Global device-level push to talk",
  "main": "build/main.js",
  "author": "bherbruck",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && electron ./build/main.js",
    "dist": "yarn build && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^15.0.1",
    "electron": "^18.3.7",
    "electron-builder": "^22.10.5",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "electron-store": "5.2.0",
    "iohook": "^0.6.6",
    "win-audio": "^2.0.2"
  },
  "build": {
    "appId": "push-to-talk",
    "productName": "Push to Talk",
    "files": [
      "build/**/*",
      "assets/**/*",
      "package.json"
    ]
  },
  "iohook": {
    "targets": [
      "electron-85"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  }
}
